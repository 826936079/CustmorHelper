<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <gradient android:startColor="#80cccccc" android:endColor="#80cccccc" android:angle="90.0" android:centerColor="#80cccccc" />
            <padding android:left="1dp" android:top="1dp" android:right="1dp" android:bottom="1dp" />
            <corners android:radius="10dp"/>
        </shape>
    </item>
    <item>
        <shape>
            <gradient android:startColor="@color/gray" android:endColor="@color/gray" android:angle="90.0" android:centerColor="@color/gray" />
            <padding android:left="1dp" android:top="1dp" android:right="1dp" android:bottom="1dp" />
            <corners android:radius="10dp"/>
        </shape>
    </item>
</selector>